# Environment configuration for FL-Visualization

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=5002

# Upload Configuration
MAX_CONTENT_LENGTH=500  # MB
UPLOAD_FOLDER=uploads

# Federated Learning Configuration
DEFAULT_GLOBAL_ROUNDS=5
DEFAULT_LOCAL_EPOCHS=3
MAX_CLIENTS=10

# Model Configuration
MODEL_SAVE_PATH=./src/best_federated_lung_nodule_model.pth
PATCH_SIZE=64,64,64

# Logging Configuration
LOG_LEVEL=INFO
MAX_LOG_ENTRIES=50

# Security Configuration
SESSION_TIMEOUT=3600  # seconds
ALLOWED_EXTENSIONS=mhd,raw,nii,nii.gz

# Performance Configuration
MAX_WORKERS=4
TORCH_THREADS=2

# Development Configuration (for testing)
TESTING=False
WTF_CSRF_ENABLED=False
